{% extends 'template.html.twig' %}
{% form_theme edit_form 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="card">
 <div class="card-header">Create/Edit Campaign</div>
<div class="card-body">
    <div class="card-text">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <hr/>
        <div>
            <a href="{{ path('homepage') }}" class="btn btn-info">Cancel</a>
            <button type="reset" value="Reset" class="btn btn-primary">Reset</button>
            <input type="submit" value="Submit" class="btn btn-warning"/>
        </div>

        {{ form_end(edit_form) }}
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<script type='application/javascript' src="{{ asset('assets/js/libs/tinymce/tinymce.min.js') }}"></script>
<script>
// Prevent Bootstrap dialog from blocking focusin
$(document).on('focusin', function(e) {
  if ($(e.target).closest(".mce-window").length) {
    e.stopImmediatePropagation();
  }
});

tinymce.init({
  selector: '#campaign_description'
});
</script>
{% endblock %}
