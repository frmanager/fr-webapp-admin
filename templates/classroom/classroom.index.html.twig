{% extends 'template.html.twig' %}

{% block title %}Classroom List{% endblock %}


{% block body %}

<div class="card">
  <div class="card-body">
      <div class="row">
          <div class="col-sm-5">
              <h4 class="card-title mb-0">Classrooms</h4>
              <div class="small text-muted">xxxxxxx</div>
          </div>
          <!--/.col-->
          <div class="col-sm-7">
              <button type="button" class="hidden-sm-down btn btn-primary float-right"><i class="icon-cloud-download"></i>
              </button>
              <div class="btn-toolbar float-right" role="toolbar" aria-label="Toolbar with button groups">
                  <div class="btn-group mr-3" aria-label="First group">
                      <a href="{{ path('classroom_new', {'campaignUrl':campaign.url}) }}" class="btn btn-outline-secondary">
                          <i class="fa fa-plus"></i>
                          Add New</a>
                      <a href="{{ path('classroom_upload', {'campaignUrl':campaign.url}) }}" class="btn btn-outline-secondary">
                          <i class="fa fa-upload"></i>
                          Upload CSV</a>
                  </div>
              </div>
          </div>
          <!--/.col-->
      </div>
      <!--/.row-->
      <br/>
      <table class="table table-hover table-outline mb-0" id="classroomIndexTable">
            <thead class="thead-default">
                <tr>
                    <th>Grade</th>
                    <th>Classroom's Name</th>
                    <th>Donations</th>
                    <th>Rank</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for classroom in classrooms %}
                    <tr>
                        <td>{{ classroom.grade_name}}</td>
                        <td><a href="{{ path('classroom_show', {'campaignUrl': campaign.url, 'classroomID': classroom.id }) }}">{{ classroom.classroom_name }}</a></td>
                        <td style="text-align:right;">{% if not classroom.donation_amount == 0 %}${{ classroom.donation_amount|number_format(2, '.', ',')}}</span>{% endif %}</td>
                        <td style="text-align:center;vertical-align: middle;"><span class="label label-{% if classroom.rank == 1 %}success{% elseif classroom.rank == 2 %}warning{% elseif classroom.rank == 3 %}primary{% else %}default{% endif %}">{{ classroom.rank}}</span></td>
                        <td style="text-align:center;vertical-align: middle;">
                            <a href="{{ path('classroom_edit', {'campaignUrl': campaign.url, 'classroomID': classroom.id }) }}" class="btn btn-sm btn-warning">
                                <i class="glyphicon glyphicon-edit"></i>
                                <span class="hidden-xs hidden-sm">
                                    Edit</span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
  </div><!-- ./card-block -->
</div><!-- ./card -->
{% endblock %}



{% block javascripts %}
{% endblock %}
