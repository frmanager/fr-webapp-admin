{% extends 'template.html.twig' %}

{% block body %}

<div class="card">
<div class="card-body">
        <div class="row">
            <div class="col-sm-5">
                <h4 class="card-title mb-0">Verify Student {{donation.studentName}}</h4>
                <div class="small text-muted">{{donation.classroom.grade.name}} - {{donation.classroom.teacherName}}</div>
            </div>

            <div class="col-sm-7">
                <div class="btn-toolbar float-right" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="dropdown pull-right">
                        <button class="btn btn-outline-info btn-inline dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-cog" aria-hidden="true"></i> Can't Find Student?
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a  href="{{ path('donation_student_verify', {'campaignUrl':campaign.url, 'donationID':donation.id, 'action':'donation_student_verify_email_donor'}) }} " class="dropdown-item" href="#"><i class="fa fa-envelope" aria-hidden="true"></i> Email Donor</a>
                        <a  href="{{ path('donation_student_verify', {'campaignUrl':campaign.url, 'donationID':donation.id, 'action':'donation_student_verify_email_coordinator'}) }} " class="dropdown-item" href="#"><i class="fa fa-envelope" aria-hidden="true"></i> Email School Coordinator</a>                       
                        <a  href="{{ path('donation_student_verify', {'campaignUrl':campaign.url, 'donationID':donation.id, 'action':'donation_student_verify_email_teacher'}) }} " class="dropdown-item" href="#"><i class="fa fa-envelope" aria-hidden="true"></i> Email Teacher</a>                        
                        </div>
                    </div>
                </div>
            </div>
            <!--/.col-->





            <!--/.col-->
        </div>
        </div>
        <!--/.row-->
        <br/>
          <table class="table table-hover table-outline mb-0" id="donationVerifyTable">
              <thead class="thead-default">
                  <tr>
                    <th>Teacher</th>
                    <th>Student's Name</th>
                    <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for student in students %}
                  <tr>
                      <td>{{ student.grade.name }} - {{ student.classroom.teacherName }}</td>
                      <td>{{ student.name }}</td>
                      <td style="text-align:center;vertical-align: middle;">
                          <a href="{{ path('donation_student_verify', { 'campaignUrl': campaign.url, 'donationID': donation.id, 'action':'link', 'studentID': student.id}) }}" class="btn btn-sm btn-warning">
                              <i class="fa fa-link" aria-hidden="true"></i>
                              <span>Link</span>
                          </a>
                      </td>
                  </tr>
                  {% endfor %}
              </tbody>
          </table>
    </div>


{% endblock %}
{% block javascripts %}
{% endblock %}
