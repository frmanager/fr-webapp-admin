{% extends 'template.html.twig' %}

{% block body %}

<div class="card">
<div class="card-block">
        <div class="row">
            <div class="col-sm-5">
                <h4 class="card-title mb-0">Verify Student {{donation.studentName}}</h4>
                <div class="small text-muted">{{donation.classroom.grade.name}} - {{donation.classroom.teacherName}}</div>
            </div>
            <!--/.col-->
        </div>
        <!--/.row-->
        <br/>
          <table class="table table-responsive table-hover table-outline mb-0" id="donationVerifyTable">
              <thead class="thead-default">
                  <tr>
                    <th>Teacher</th>
                    <th>Student's Name</th>
                    <th class="col-md-2 col-sm-1">Actions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for student in students %}
                  <tr>
                      <td>{{ student.grade.name }} - {{ student.classroom.teacherName }}</td>
                      <td>{{ student.name }}</td>
                      <td style="text-align:center;vertical-align: middle;">
                          <a href="{{ path('donation_student_verify', { 'campaignUrl': campaign.url, 'donationID': donation.id, 'action':'link', 'studentID': student.id}) }}" class="btn btn-sm btn-warning">
                              <i class="fa fa-link" aria-hidden="true"></i>
                              <span>Link</span>
                          </a>
                      </td>
                  </tr>
                  {% endfor %}
              </tbody>
          </table>
        </div>
    </div>


{% endblock %}
{% block javascripts %}
{% endblock %}
