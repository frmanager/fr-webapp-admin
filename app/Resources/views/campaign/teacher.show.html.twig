{% extends 'template.html.twig' %}
{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    {% set number_of_donations = 0 %}
    {% set donation_amount = 0 %}
        {% for donation in teacher.donations %}
            {% set number_of_donations = number_of_donations + 1 %}
            {% set donation_amount = donation_amount + donation.amount %}
    {% endfor %}

    <div class="row" style="">
        <div class="col-md-4">
            <h1>{{ teacher.teacherName }}</h1>
        </div>
        <div class="col-md-8" style="text-align:right;">
            <div style="">
                <a href="{{ path('teacher_index', { 'campaignUrl': campaign.url }) }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-user"></i>
                    Back to Teachers List</a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <hr/>
    <div class="clearfix"></div>
    {% for campaign_award in campaign_awards %}
        {% if campaign_award.campaignawardtype.value == "teacher" %}
            {% if campaign_award.campaignawardstyle.value == "place" %}
                {% if campaign_award.place == teacher_rank %}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="well" style="text-align:center;background-color: #dff0d8;">
                                <h5>This class is currently rank
                                    <span class="label label-success">{{ teacher_rank }}</span>, which means it could get the ''{{campaign_award.name}}' Prize!!</h5>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endif %}
    {% endfor %}
    <div class="row">
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading">Teacher Info</div>
                <table class="table table-bordered dt-responsive table-condensed">
                    <tbody>
                        <tr>
                            <th style="text-align:right;">Grade</th>
                            <td>
                                {% if is_granted('ROLE_USER') %}<a href="{{ path('grade_show', { 'id': teacher.grade.id }) }}">{{ teacher.grade.name }}</a>{% else %}{{ teacher.grade.name }}{% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th style="text-align:right;">Name</th>
                            <td>
                                {{ teacher.teachername }}
                            </td>
                        </tr>
                        {% if is_granted('ROLE_USER') %}
                            <tr>
                                <th style="text-align:right;">Email</th>
                                <td>
                                    {{ teacher.email }}
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">Students</th>
                                <td>
                                    {{ teacher.students|length }}
                                </td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th style="text-align:right;">Donations</th>
                            <td>{{ number_of_donations }}</td>
                        </tr>
                        <tr>
                            <th style="text-align:right;">Amount</th>
                            <td>${{ donation_amount|number_format(2, '.', ',') }}</td>
                        </tr>
                        <tr>
                            <th style="text-align:right;">Rank</th>
                            <td style="vertical-align: middle;">
                                <span class="label label-{% if teacher_rank == 1 %}success{% elseif teacher_rank == 2 %}warning{% elseif teacher_rank == 3 %}primary{% else %}default{% endif %}">{{ teacher_rank }}</span>
                            </tr>
                        </tr>
                    </tbody>
                </table>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="panel-body" style="font-size:16px;">
                        <div style="text-align:center;">
                            {{ form_start(delete_form) }}
                            <a href="{{ path('teacher_edit', { 'campaignUrl': campaign.url, 'id': teacher.id }) }}" class="btn btn-warning">Edit</a>
                            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete {{teacher.teacherName}}?')" class="btn btn-danger">
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="col-sm-7">
            <div class="panel panel-default">
                <div class="panel-heading">Class Awards Achieved</div>
                {% if number_of_donations > 0 %}
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Amount Required</th>
                                <th>Acheived</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for campaign_award in campaign_awards %}
                                {% if campaign_award.campaignawardtype.value == "teacher" %}
                                    {% if campaign_award.campaignawardstyle.value == "level" %}
                                        <tr {% if donation_amount >= campaign_award.amount %} class="success" {% endif %}>
                                            <td>{{ campaign_award.name }}</td>
                                            <td class="col-xs-3" style="text-align:right;">${{ campaign_award.amount|number_format(2, '.', ',') }}</td>
                                            <td class="col-xs-1" style="text-align:center;">
                                                {% if donation_amount >= campaign_award.amount %}
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                            <tbody></table>
                        {% else %}
                            <div class="panel-body" style="font-size:120%;">
                                <div style="text-align:center">
                                    <span class="lead">No donations yet!</span>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% if is_granted('ROLE_USER') %}
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">Student Summary</div>
                            <table class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th style="border-top:1px #ccc;">Student</th>
                                        <th style="border-top:1px #ccc;">Amount Donated</th>
                                        <th style="border-top:1px #ccc;"># of Donations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for student in teacher.students %}
                                        {% set student_number_of_donations = 0 %}
                                        {% set student_donation_amount = 0 %}
                                        {% for donation in student.donations %}
                                            {% set student_number_of_donations = student_number_of_donations + 1 %}
                                            {% set student_donation_amount = student_donation_amount + donation.amount %}
                                        {% endfor %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('student_show', {'campaignUrl':campaign.url, 'id': student.id }) }}">{{ student.name }}</a>
                                            </td>
                                            <td style="text-align:right;">
                                                {% if not student_donation_amount == 0 %}${{ student_donation_amount|number_format(2, '.', ',')}}{% endif %}
                                            </td>
                                            <td style="text-align:center;">
                                                {% if not student_number_of_donations == 0 %}{{ student_number_of_donations }}{% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    <tbody></table>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">Donation Summary</div>
                                    {% if number_of_donations > 0 %}
                                        <table class="table table-bordered table-striped table-condensed">
                                            <thead>
                                                <tr>
                                                    <th style="border-top:1px #ccc;">Date</th>
                                                    <th style="border-top:1px #ccc;">Student</th>
                                                    <th style="border-top:1px #ccc;">Amount Donated</th>
                                                    <th style="border-top:1px #ccc;">Type</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for donation in teacher.donations %}
                                                        <tr>
                                                            <td>{{ donation.donatedAt|date("m/d/Y")  }}</td>
                                                            <td>
                                                                {% if donation.student.id is defined %}<a href="{{ path('student_show', {'campaignUrl':campaign.url, 'id': donation.student.id }) }}">{{ donation.student.name }}</a>{% else %}N/A{% endif %}
                                                            </td>
                                                            <td style="text-align:right;">${{ donation.amount |number_format(2, '.', ',')}}</td>
                                                            <td style="text-align:center;">{{ donation.type }}</td>
                                                        </tr>
                                                {% endfor %}
                                                <tbody></table>
                                            {% else %}
                                                <div class="panel-body" style="font-size:120%;">
                                                    <div style="text-align:center">
                                                        <span class="lead">No donations yet!</span>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endblock %}
                        {% block javascripts %}
                            <script>
                                $(document).ready(function() {
                                    var ctx = $("#myChart");

                                    var data = {
                                        labels: [
                                            "January",
                                            "February",
                                            "March",
                                            "April",
                                            "May",
                                            "June",
                                            "July"
                                        ],
                                        datasets: [
                                            {
                                                label: "My First dataset",
                                                fill: false,
                                                lineTension: 0.1,
                                                backgroundColor: "rgba(75,192,192,0.4)",
                                                borderColor: "rgba(75,192,192,1)",
                                                borderCapStyle: 'butt',
                                                borderDash: [],
                                                borderDashOffset: 0.0,
                                                borderJoinStyle: 'miter',
                                                pointBorderColor: "rgba(75,192,192,1)",
                                                pointBackgroundColor: "#fff",
                                                pointBorderWidth: 1,
                                                pointHoverRadius: 5,
                                                pointHoverBackgroundColor: "rgba(75,192,192,1)",
                                                pointHoverBorderColor: "rgba(220,220,220,1)",
                                                pointHoverBorderWidth: 2,
                                                pointRadius: 1,
                                                pointHitRadius: 10,
                                                data: [
                                                    65,
                                                    59,
                                                    80,
                                                    81,
                                                    56,
                                                    55,
                                                    40
                                                ],
                                                spanGaps: false
                                            }
                                        ]
                                    };

                                    var myLineChart = new Chart(ctx, {
                                        type: 'line',
                                        data: data
                                    });
                                });
                            </script>
                        {% endblock %}
