{% extends 'campaign.html.twig' %}
{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>View CauseVox Team</h1>
            <hr/>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <dl class="dl-horizontal">
                  <dt>ID</dt>
                  <dd>{{ causevoxteam.id }}</dd>
                  <dt>Teacher</dt>
                  <dd>{{ causevoxteam.classroom.grade.name }} - {{ causevoxteam.classroom.teachername }}</dd>
                  <dt>Name</dt>
                  <dd>{{ causevoxteam.name }}</dd>
                  <dt>URL</dt>
                  <dd>{{ causevoxteam.url }}</dd>
              </dl>
                {{ form_start(delete_form) }}
                <a href="{{ path(entity|lower ~ '_index') }}" class="btn btn-info">Back</a>
                <a href="{{ path(entity|lower ~ '_edit', { 'id': causevoxteam.id }) }}" class="btn btn-primary">Edit</a>
                <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete {{causevoxteam.id}}?')" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
